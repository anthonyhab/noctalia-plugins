{
  "id": "polkit-auth",
  "name": "Polkit Authentication",
  "version": "0.1.1",
  "minNoctaliaVersion": "3.6.0",
  "author": "habibe",
  "license": "MIT",
  "repository": "https://github.com/habibe/noctalia-polkit",
  "description": "Use Noctalia panels as your Polkit authentication agent.",
  "entryPoints": {
    "main": "Main.qml",
    "panel": "Panel.qml",
    "settings": "Settings.qml"
  },
  "dependencies": { "plugins": [] },
  "metadata": {
    "defaultSettings": {
      "pollInterval": 100,
      "settingsPanelMode": "centered",
      "syncPanelModeWithShell": false,
      "autoOpenPanel": true,
      "autoCloseOnSuccess": true,
      "showSuccessAnimation": true,
      "autoCloseOnCancel": true,
      "successAnimationDuration": 300
    }
  }
}
